{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "es2015",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist"]
}
